<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAEAEA"
    tools:context=".notice.CenterActivity">

    <TextView
        android:id="@+id/mypage3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#879AFF"
        android:paddingLeft="30dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:text="고 객 센 터"
        android:textColor="@color/white"
        android:textSize="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/customercontent1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="43dp"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="안녕하세요. Catch의 고객센터입니다.
                    \n고객님의 소중한 의견을 기다리고 있으니
                    \n하단의 메모 사항을 확인하시어
                    \n문의 부탁드립니다.
                    \n
                    \n주말 및 법정 공휴일은 휴무일입니다.
                    \n평일 근무하여 성심껏 도움드리겠습니다.
                    \n
                    \n서비스에 불편함을 느끼시거나
                    \n도움 필요 시 1644-0000 연락주세요.
                    \n감사합니다."
        android:textColor="@color/black"
        android:textSize="14dp"
        app:layout_constraintBottom_toTopOf="@+id/textView23"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/customertitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="9dp"
        android:text="Catch 고객센터"
        android:textColor="#879AFF"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mypage3" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginLeft="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginRight="40dp"
        android:layout_marginBottom="40dp"
        android:background="@color/white"
        android:padding="@dimen/activity_horizontal_margin"
        android:text="고객센터 운영시간
                      \n주중 10:00 - 18:00
                      \n점심시간 12:30 - 13:30
                      \n
                      \n문의 이메일
                      \ndongyang@mirae.ac.kr"
        android:textColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />
</android.support.constraint.ConstraintLayout>